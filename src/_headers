# Rewrite paths: same Cache-Control as /*.html so CDN/browser don't cache HTML
# (_redirects 200: /contact, /contact-success â†’ .html; request path has no .html so /*.html doesn't match)
/contact
  Cache-Control: no-cache, no-store, must-revalidate
/contact-success
  Cache-Control: no-cache, no-store, must-revalidate

# Cache static assets (YSlow: Add Expires headers)
# One segment under /assets (e.g. /assets/css)
/assets/*
  Cache-Control: public, max-age=31536000, immutable
# Nested paths (e.g. /assets/css/style.css, /assets/images/logo/...)
/assets/*/*
  Cache-Control: public, max-age=31536000, immutable

# Favicons: shorter cache so updates (e.g. logo tweaks) take effect without long-lived cache
/assets/images/favicon.svg
  Cache-Control: public, max-age=86400
/assets/images/favicon.png
  Cache-Control: public, max-age=86400
/assets/images/favicon-32x32.png
  Cache-Control: public, max-age=86400
/assets/images/favicon-16x16.png
  Cache-Control: public, max-age=86400

# HTML: do not cache so deploys are visible immediately (no stale honeypot/UI)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate

/index.html
  Cache-Control: no-cache, no-store, must-revalidate

# COOP + CSP for /admin must come after /* so they win (Netlify: last match wins). Decap needs unsafe-eval; COOP unsafe-none so OAuth popup keeps opener.
/admin
/admin/*
  Cross-Origin-Opener-Policy: unsafe-none
  Content-Security-Policy: default-src 'self'; img-src 'self' https: data:; script-src 'self' https://unpkg.com blob: 'unsafe-inline' 'unsafe-eval'; worker-src 'self' blob:; style-src 'self' https://unpkg.com 'unsafe-inline'; frame-src 'self' https://app.netlify.com; connect-src 'self' https://unpkg.com https://api.github.com https://api.netlify.com https://app.netlify.com https://*.netlify.com
